<idea-plugin>
    <id>com.github.rogerhowell.JavaCodeBrowser</id>
    <name>Java Code Browser</name>
    <vendor email="mysteraitch@users.noreply.github.com" url="https://github.com/MysterAitch">Roger Howell</vendor>


    <description><![CDATA[
    Using JavaParser, parse a given project and display a navigable syntax tree to navigate around the project.
    ]]></description>


    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>


    <!-- https://www.jetbrains.org/intellij/sdk/docs/user_interface_components/tool_windows.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="com.github.rogerhowell.JavaCodeBrowser.Settings"/>
        
        <toolWindow id="JavaParser Browser"
                    anchor="bottom"
                    secondary="false"
                    icon="/JavaCodeBrowser/graph icon -- 13x13.png"
                    factoryClass="com.github.rogerhowell.JavaCodeBrowser.tool_window.AstBrowserToolWindowFactory"
        />
    </extensions>


    <actions>
        <!-- Add your actions here -->
        <group id="JavaCodeBrowser.Actions" text="Java Code Browser" description="About my idea">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action class="com.github.rogerhowell.JavaCodeBrowser.BasicAction" id="JavaCodeBrowser.Actions.BasicAction" text="Hello World!"/>
        </group>
    </actions>

</idea-plugin>
